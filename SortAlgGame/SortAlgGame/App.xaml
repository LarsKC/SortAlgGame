<Application x:Class="SortAlgGame.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm ="clr-namespace:SortAlgGame.ViewModel"
    xmlns:views="clr-namespace:SortAlgGame.Views"
    StartupUri="SurfaceWindow1.xaml"
    >
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type vm:HauptmenueViewModel}">
                <views:Hauptmenue />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:MenueErklaerungViewModel}">
                <views:MenueErklaerungen />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:GameVM}">
                <views:GameV />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:BubbleSortVM}">
                <views:Erklaerung />
            </DataTemplate>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Microsoft.Surface.Presentation.Generic;v2.0.0.0;31bf3856ad364e35;component/themes\styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
