<UserControl x:Class="SortAlgGame.Views.Hauptmenue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:my="http://schemas.microsoft.com/surface/2008"
             xmlns:root="clr-namespace:SortAlgGame"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
           <StackPanel HorizontalAlignment="Center" Name="stackPanel1" VerticalAlignment="Center" Width="200">
                <my:SurfaceButton Content="Erklärungen" Height="25" Name="surfaceButton1" Width="200" Command="{Binding DataContext.changeToErklaerung, RelativeSource={RelativeSource AncestorType={x:Type root:SurfaceWindow1}}, Mode=OneWay}"/>
                <my:SurfaceButton Content="Spiel starten" Height="25" Name="surfaceButton2" Width="200" Command="{Binding DataContext.changeToGame, RelativeSource={RelativeSource AncestorType={x:Type root:SurfaceWindow1}}, Mode=OneWay}"/>
                <my:SurfaceButton Content="BlaaTest" Height="25" Name="test" Width="200" Command="{Binding DataContext.changeToResult, RelativeSource={RelativeSource AncestorType={x:Type root:SurfaceWindow1}}, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</UserControl>
