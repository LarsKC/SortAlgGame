<UserControl x:Class="SortAlgGame.Views.GameV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:root="clr-namespace:SortAlgGame"
             xmlns:v="clr-namespace:SortAlgGame.Views"
             xmlns:vm="clr-namespace:SortAlgGame.ViewModel"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" xmlns:s="http://schemas.microsoft.com/surface/2008">
    <UserControl.Resources>
        <DataTemplate x:Key="SurfaceListBoxItemDataTemplate">
            <StackPanel Background="DarkGray">
                <Label 
                        Content="{Binding Path=Content}" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        FontSize="15"
                        Foreground="Black"
                        AllowDrop="True"
                        />
            </StackPanel>
        </DataTemplate>
        <Style x:Key="CursorStyle" TargetType="{x:Type ContentControl}">
            <Setter Property="ContentTemplate" Value="{StaticResource SurfaceListBoxItemDataTemplate}" />
            <Setter Property="BorderThickness" Value="9"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static s:SurfaceColors.Accent1BrushKey}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContentControl}">
                        <Border 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter Margin="0"
                                Content="{TemplateBinding Content}" 
                                ContentTemplate="{TemplateBinding ContentTemplate}">
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Tag" Value="CanDrop">
                    <Setter Property="BorderBrush" Value="{DynamicResource {x:Static s:SurfaceColors.Accent4BrushKey}}" />
                </Trigger>
                <Trigger Property="Tag" Value="CannotDrop">
                    <Setter Property="BorderBrush" Value="{DynamicResource {x:Static s:SurfaceColors.Accent3BrushKey}}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" >
            <s:SurfaceListBox 
                Tag="sourceListP1"
                Name="surfaceList1"
                Margin="10,10,10,10" 
                Height="auto" 
                HorizontalAlignment="Left"   
                VerticalAlignment="Top" 
                Width="auto" 
                AllowDrop="True"
                HorizontalContentAlignment="Stretch"
                ItemTemplate="{StaticResource SurfaceListBoxItemDataTemplate}"
                BorderBrush="{DynamicResource {x:Static s:SurfaceColors.ListBoxItemBackgroundBrushKey}}" 
                ItemsSource="{Binding Path=SourceItemsP1, Mode=OneWay}"
                PreviewTouchDown="sourceList_PreviewTouchDown"
                s:SurfaceDragDrop.DragEnter="OnDropTargetDragEnter"
                s:SurfaceDragDrop.DragLeave="OnDropTargetDragLeave"
                s:SurfaceDragDrop.Drop="OnDropTargetDrop"
                s:SurfaceDragDrop.DragCompleted="OnDragCompleted"/>
            <s:SurfaceListBox 
                Tag="targetListP1"
                Name="surfaceList2"
                Margin="0,10,10,10" 
                Height="auto" 
                HorizontalAlignment="Left"   
                VerticalAlignment="Top" 
                Width="auto" 
                AllowDrop="False"
                HorizontalContentAlignment="Stretch"
                ItemTemplate="{StaticResource SurfaceListBoxItemDataTemplate}"
                BorderBrush="{DynamicResource {x:Static s:SurfaceColors.ListBoxItemBackgroundBrushKey}}" 
                ItemsSource="{Binding Path=TargetItemsP1, Mode=OneWay}"
                s:SurfaceDragDrop.DragEnter="OnDropTargetDragEnter"
                s:SurfaceDragDrop.DragLeave="OnDropTargetDragLeave"
                s:SurfaceDragDrop.Drop="OnDropTargetDrop"
                PreviewTouchDown="sourceList_PreviewTouchDown"
                s:SurfaceDragDrop.DragCompleted="OnDragCompleted"/>
            <Image Tag="delete1" Height="50" Name="image1" Stretch="Fill" Width="50" Source="/Resources/icon.png"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <s:SurfaceListBox 
                Tag="sourceListP2"
                Name="surfaceList3"
                Margin="10,10,10,10" 
                Height="auto" 
                HorizontalAlignment="Left"   
                VerticalAlignment="Top"
                Width="auto" 
                AllowDrop="True"
                HorizontalContentAlignment="Stretch"
                ItemTemplate="{StaticResource SurfaceListBoxItemDataTemplate}"
                BorderBrush="{DynamicResource {x:Static s:SurfaceColors.ListBoxItemBackgroundBrushKey}}" 
                ItemsSource="{Binding Path=SourceItemsP2, Mode=OneWay}"
                PreviewTouchDown="sourceList_PreviewTouchDown"
                s:SurfaceDragDrop.DragEnter="OnDropTargetDragEnter"
                s:SurfaceDragDrop.DragLeave="OnDropTargetDragLeave"
                s:SurfaceDragDrop.Drop="OnDropTargetDrop"
                s:SurfaceDragDrop.DragCompleted="OnDragCompleted"/>
            <s:SurfaceListBox 
                Tag="targetListP2"
                Name="surfaceList4"
                Margin="0,10,10,10" 
                Height="auto" 
                HorizontalAlignment="Left"   
                VerticalAlignment="Top" 
                Width="auto" 
                AllowDrop="False"
                HorizontalContentAlignment="Stretch"
                ItemTemplate="{StaticResource SurfaceListBoxItemDataTemplate}"
                BorderBrush="{DynamicResource {x:Static s:SurfaceColors.ListBoxItemBackgroundBrushKey}}" 
                ItemsSource="{Binding Path=TargetItemsP2, Mode=OneWay}"
                PreviewTouchDown="sourceList_PreviewTouchDown"
                s:SurfaceDragDrop.DragEnter="OnDropTargetDragEnter"
                s:SurfaceDragDrop.DragLeave="OnDropTargetDragLeave"
                s:SurfaceDragDrop.Drop="OnDropTargetDrop"
                s:SurfaceDragDrop.DragCompleted="OnDragCompleted"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1">
            <s:SurfaceButton Content="Hauptmenü" Height="25" Name="surfaceButton1" Width="200" Command="{Binding DataContext.changeToHauptmenue, RelativeSource={RelativeSource AncestorType={x:Type root:SurfaceWindow1}}, Mode=OneWay}"/>
            <s:SurfaceButton Content="PrintExecute" Height="25" Name="surfaceButton2" Width="200" Command="{Binding DataContext.printExecute, RelativeSource={RelativeSource AncestorType={x:Type root:SurfaceWindow1}}, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</UserControl>
